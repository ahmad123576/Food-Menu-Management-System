@model ProductDto
@{
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3 ">
		<h2 class="text-center mb-5">Edit Item</h2>

		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col col-form-label">Id</label>
				<div class="col-sm-8">
					<input class="form-control-plaintext" readonly value="@ViewData["ProductId"]">
				</div>
			</div>

			<div class="row mb-3">
				<label class="col col-form-label">Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col col-form-label">Category</label>
				<div class="col-sm-8">
					<select class="form-select" asp-for="Category">
						<option value="others">others</option>
						<option value="Fast Food">Fast Food</option>
						<option value="Dessert">Dessert</option>
						<option value="Mexican">Mexican</option>
					</select>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col col-form-label">Price</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Price">
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col col-form-label">Description</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Description">
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-8">
					<img src="/foods/ViewData[" ImageFileName"]" width="150" />
				</div>
			</div>

			<div class="row mb-3">
				<label class="col col-form-label">Image</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ImageFile">
					<span asp-validation-for="ImageFile" class="text-danger"></span>
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-primary" asp-controller="Products" asp-action="Index" role="button">
						Cancel
					</a>
				</div>

			</div>
		</form>
	</div>

</div>
